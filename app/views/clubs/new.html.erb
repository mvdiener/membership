<h1>Track new membership</h1>

<% if @errors %>
  <% @errors.each do |error| %>
    <li><%= error %></li>
  <% end %><br>
<% end %>

<%= form_for(@club, url: memberships_path) do |f| %>
  <%= f.text_field :name, placeholder: "Name" %><br>
  <%= f.text_field :duration_day, placeholder: "Duration in Days" %><br>
  <%= f.text_field :total_cost, placeholder: "Membership Cost" %><br>
  <%= f.text_field :daily_cost, placeholder: "Daily Cost" %><br>
  <%= f.submit "Start tracking!", class: 'button' %>
<% end %>