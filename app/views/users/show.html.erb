<div class="small-10 columns small-centered">
  <div class="row">
    <center>
      <h3>Welcome back <%= @user.username %></h3>
      <p><%= link_to "Track new pass", new_pass_path, class: "button" %></p>
    </center>
  </div>
</div>
<div class="small-10 columns small-centered">
  <div class="row">
    <ul class="small-block-grid-1 medium-block-grid-2 large-block-grid-3">
      <% @passes.each do |pass| %>
        <li><div class="panel">
          <%= link_to pass.name, pass_path(pass.id), method: "GET" %>
          Pass ID: <%= pass.id %><br>
          Pass name: <%= pass.name %><br>
          Pass duration in days: <%= pass.duration_day %><br>
          Pass cost: $<%= sprintf "%.2f", pass.total_cost %><br>
          Cost per day without pass: $<%= sprintf "%.2f", pass.daily_cost %><br>
          You need to attend <%= pass.name %> <%= pass.break_even_day %> time(s) to break even!<br>
        </div></li>
      <% end %>
    </ul>
  </div>
</div>